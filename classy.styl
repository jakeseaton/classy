/* Body */
body
  overflow hidden
  /* overflow hidden? */
  // background-image Parchment_url
  background-color #E5E8ED
  font-family Text_font_family


#wrapper
  width 100%
  height 70%
  display inline-block
  position relative
  // position relative
  // z-index 20
  // top 10%
  // text-align center
  // display inline-block
  // overflow hidden
  // overflow scroll
  #card
    position absolute
    margin-left auto
    margin-right auto
    display inline-block
    height 450px
    width 40%
    left 25%
    right 25%
    top 10px
    box-shadow 1px 1px 1px Black
    border-bottom 2px solid Red
    &:hover
      box-shadow 2px 2px 2px Black

    // border-left 1px solid Black
    // border-right 1px solid Blank
    // border-radius 20px
    background Blank
    // font Classy_font
    text-align center
    font-size 40px
    z-index 10
      &:hover
        border-bottom 1px solid Blue
    #print
      bottom 0
      position absolute
      width 100%
      text-align center
      img
        width 36px
        height 36px

  #drawer
    position relative
    overflow scroll !important
    float left
    color Cream
    // background-image Parchment_url
    height 600px
    width drawer_width
    z-index 0
    // top 20%
    // bottom 0


    #results
      // background-color Red
      width 100%
      text-align center
      color Black
      // margin-top 0
      margin-left auto
      margin-right auto
      position relative
      bottom 0
      #search-results-table
        left 10px
        height 100%
        width 100%
        font-size 20px
      ul
        // font Classy_font
        margin-left auto
        margin-right auto
        list-style-type none
        li
          // background-image url("img/parchment.jpg")
          // background-image Parchment_url
          background-color Blank
          left 0
          right 0
          height 100px
          width 100%
          margin-bottom 5px
          margin-top 5px
          border-left 5px solid White
          border-bottom 5px solid Red
          border-radius 5px
          // font Classy_font
          // font-size 20px
          &:hover
            border-left 5px solid Red
            border-bottom 5px solid Red
            box-shadow 1px 1px 1px Black
            border-radius 5px
          img
            square_image(36px)
            float right
          .course-info
            // font Classy_font
            // font-size 10px
            top 0
            left 0
            margin-right 0px
            width 80%
            text-align left
            font-size 18px
          .wine-match
            float right
            width 20%
            height 100%
            overflow hidden
            top 0
            right 0px

  #center
    // margin-bottom 0
    // display block
    position relative
    text-align center
    // display inline-block
    width center_width
    float right
    min-height 100%
    // height 100%
    overflow scroll
    z-index 10
    // background-image url("img/parchment.jpg")
    // left 25%
    // right 25%
    #viewer
      a
        text-decoration none
        color Black
      img
        width 36px
        height 36px

      font-size 20px
      font-weight bold
      margin-top 10px
      // border-radius 20px
      height viewer_height
      // box-shadow 10px 10px 10px #888888
      // height 90%
      background-color Blank
      margin-left auto
      width 90%
      margin-right auto
      // background-color Black
      // background-image Parchment_url
      border 1px solid Red
      box-shadow 1px 1px 1px Black
      color Black
      // .course-info
      //   .wine-glass
      //     square_image(36px)
      #refresh
        square_image(36px)
        &:hover
          cursor pointer

      .star
        // float left
        &:hover
          cursor pointer
      .add
        // float left
        // margin-left 10px
        &:hover
          cursor pointer
      .bars
        // text-align left
        display inline-block
        text-align center
        width 100%
        bottom 0
        margin-bottom 0
        .bar
          display inline-block
          text-align center
          width 30% !important
        // .bar
        //   display inline-block
        //   .bar-inner
        //     display inline-block
        //     background-color Red
      .suggestions
        overflow scroll
        display inline-block
        height 190px
        width 100%
        // direction rtl
        bottom 15px
        position absolute
        margin-right auto
        margin-left auto
        left 0
        .circle
          border 1px solid Black
          border-radius 18px
          width 36px
          height 36px
          margin-left auto
          margin-right auto
          text-align center
          i
            position relative
            top 25%
            bottom auto
        .wine-glass
          margin-bottom 0


          top 0
          border-radius 18px
          border 1px solid Black
          .proof
            margin-left auto
            margin-right auto
            margin-top auto
            margin-bottom auto
            position absolute
        .wine-name
          // position relative
          height 40%
          overflow hidden
          width 100%
        .suggestion-item
          width 30%
          display inline-block
          height 100px
          top 0
          // bottom 0
          &:hover
            cursor pointer
            border-bottom 1px solid Red

      .comments
        bottom 0
        position absolute
        border-radius 20px
        width 80%
        height 30%
        overflow scroll
        background-color Red
        // position relative
        ul.comment-list
          list-style-type none
          li
            border-bottom 5px solid Grey
/* Login page */
#login-page
  top 10%
  position absolute
  width 100%
  height 100%
  text-align center
  img
    width 200px
    height 200px
    margin-left auto
    margin-right auto
    display inline block

/* Footer/other */
iframe
  width 100%
  height 100%
  position absolute
  background-color white

footer
  width 100%
  height 5%
  z-index 20
  bottom 0
  background-color Black
  position fixed
.whitespace
  margin-top 0
  background-color Gold
  opacity 1
  height 5px
  width 100%
  position absolute


.invisible
  display none

